<ResourceDictionary
    x:Class="PrismApp1.Resources.Xaml.Display_StylesAndTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"  
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"    
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"    
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    
    xmlns:local="clr-namespace:PrismApp1"

    xmlns:d="http://schemas.microsoft.com/expression/interactivedesigner/2006" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" >


    <Style x:Key="FixedLayoutPanel" >
        <Setter Property="dxdo:LayoutPanel.AllowClose" Value="False" />
        <Setter Property="dxdo:LayoutPanel.AllowHide" Value="False" />
    </Style>

    <Style x:Key="LayoutControlStyle_Grid" >
        <Setter Property="dxlc:LayoutControl.Padding" Value="0" />
        <!-- Curiously, setting VerticalAlignment to Top casues the Infinite Height error -->        
        <!--<Setter Property="dxlc:LayoutControl.VerticalAlignment" Value="Top" />-->
    </Style>

    <!-- This is used to make the design experience better -->
    <Style x:Key="myDesignStyle" TargetType="UserControl">
        <Setter Property="Background" Value="White" />
    </Style>
    
    <Style x:Key="DisplayOptionsStyle" TargetType="CheckBox" >
        <Setter Property="FontSize" Value="8" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style x:Key="DisplayOptionsLayoutPanel" TargetType="dxdo:LayoutPanel">
        <Setter Property="Caption" Value="Display Options" />
        <Setter Property="AllowClose" Value="False" />
    </Style>
    
    <Style x:Key="SnapShotDetails">
        <Setter Property="dxlc:LayoutControl.Orientation" Value="Vertical" />
        <Setter Property="dxlc:LayoutControl.HorizontalAlignment" Value="Right" />
    </Style>

    <Style x:Key="NoteDetails">
        <Setter Property="dxlc:LayoutItem.VerticalAlignment" Value="Stretch" />
        <Setter Property="dxlc:LayoutControl.HorizontalAlignment" Value="Left" />
        <Setter Property="dxlc:LayoutItem.Width" Value="300" />
    </Style>

    <Style x:Key="BorderStyle1" TargetType="Border">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="7" />
    </Style>

    <Style x:Key="BorderStyle2" TargetType="Border">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style x:Key="DetailPaneBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="Aqua" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
    </Style>
    
    <Style x:Key="ExpandWhatStyle">
        <Setter Property="dxlc:LayoutItem.FontSize" Value="9" />
        <Setter Property="Border.BorderBrush" Value="Black" />
        <Setter Property="Border.BorderThickness" Value="1" />
        <Setter Property="Border.CornerRadius" Value="3" />
        <Setter Property="Border.Padding" Value="3" />

    </Style>

    <Style x:Key="CardViewStyle" >
        <Setter Property="dxg:CardView.AllowColumnFiltering" Value="True" />
        <Setter Property="dxg:CardView.AllowFilterEditor" Value="True" />
        <Setter Property="dxg:CardView.ShowFixedTotalSummary" Value="True" />
        <Setter Property="dxg:CardView.ShowFilterPanelMode" Value="ShowAlways" />
        <Setter Property="dxg:CardView.MultiSelectMode" Value="Row" />
        <Setter Property="dxg:CardView.CardLayout" Value="Rows" />
    </Style>

    <Style x:Key="TableViewStyle" >
        <!-- Added to 12.2 to 15.2 update for Optimized mode -->
        <Setter Property="dxg:TableView.UseLightweightTemplates" Value="None" />
        <Setter Property="dxg:TableView.AllowColumnFiltering" Value="True" />
        <!--<Setter Property="dxg:TableView.AllowEditing" Value="{Binding Source={x:Static local:Common.IsReadOnlyMode}}" />-->
        <!--<Setter Property="dxg:TableView.AllowEditing" Value="{Binding Path=(local:Common.AllowEditing)}" />-->
        <!--<Setter Property="dxg:TableView.AllowEditing" Value="{Binding Path=(local:Common.IsReadOnlyMode)}" />-->
        <!--<Setter Property="dxg:TableView.AllowEditing" Value="{DynamicResource Security.IsAdministratorMode}" />-->
        <!--<Setter Property="dxg:TableView.AllowEditing" Value="False" />-->
        <Setter Property="dxg:TableView.AllowFilterEditor" Value="True" />
        <Setter Property="dxg:TableView.MultiSelectMode" Value="Cell" />
        <Setter Property="dxg:TableView.ShowAutoFilterRow" Value="True" />
        <Setter Property="dxg:TableView.ShowFilterPanelMode" Value="ShowAlways" />
        <!--<Setter Property="dxg:TableView.ShowFilterPanelMode" Value="Never" />-->
        <Setter Property="dxg:TableView.ShowTotalSummary" Value="True" />
        <Setter Property="dxg:TableView.ShowFixedTotalSummary" Value="True" />
        <Setter Property="dxg:TableView.ShowGroupPanel" Value="False" />
    </Style>

    <Style x:Key="TableViewStyle2" >
        <!-- Added to 12.2 to 15.2 update for Optimized mode -->
        <Setter Property="dxg:TableView.UseLightweightTemplates" Value="None" />
        
        <Setter Property="dxg:TableView.AllowColumnFiltering" Value="True" />
        <!--<Setter Property="dxg:TableView.AllowEditing" Value="{Binding Source={x:Static local:Common.IsReadOnlyMode}}" />-->
        <!--<Setter Property="dxg:TableView.AllowEditing" Value="{Binding Path=(local:Common.IsReadOnlyMode)}" />-->
        <!--<Setter Property="dxg:TableView.AllowEditing" Value="{DynamicResource Security.IsAdministratorMode}" />-->
        <!--<Setter Property="dxg:TableView.AllowEditing" Value="False" />-->
        <Setter Property="dxg:TableView.AllowFilterEditor" Value="True" />
        <Setter Property="dxg:TableView.MultiSelectMode" Value="Row" />
        <Setter Property="dxg:TableView.ShowAutoFilterRow" Value="True" />
        <Setter Property="dxg:TableView.ShowFilterPanelMode" Value="ShowAlways" />
        <!--<Setter Property="dxg:TableView.ShowFilterPanelMode" Value="Never" />-->
        <Setter Property="dxg:TableView.ShowFixedTotalSummary" Value="True" />
        <Setter Property="dxg:TableView.ShowGroupPanel" Value="False" />
    </Style>
    
    <Style x:Key="GridControlStyle" >
        <Setter Property="dxg:GridControl.AllowMRUFilterList" Value="True" />
        <Setter Property="dxg:GridControl.AllowColumnMRUFilterList" Value="True" />
        <Setter Property="dxg:GridControl.ShowBorder" Value="False" />
        <!-- Curiously, setting VerticalAlignment to Top casues the Infinite Height error -->
        <!--<Setter Property="dxg:GridControl.VerticalAlignment" Value="Top" />-->
        <!-- So try setting a MaxHeight.  This just makes things short or long :) -->
        <!--<Setter Property="dxg:GridControl.MaxHeight" Value="500" />-->
        <!--<Setter Property="dxg:GridControl.Height" Value="500" />-->
    </Style>

    <ControlTemplate x:Key="DisplayOptionsLabel">
        <Label Content="Display Columns:" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0"
                   ToolTip="Select the columns you wish to display.  You can also right click on the column headers and use the column chooser."/>
    </ControlTemplate>
    
    <ControlTemplate x:Key="GroupByPanelTemplate">
        <Image Source="/Resources/Images/GroupByPanel.png" >
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.MouseEnter">
                    <BeginStoryboard Storyboard="{StaticResource expandStoryboard}" />
                </EventTrigger>
                <EventTrigger RoutedEvent="Image.MouseLeave">
                    <BeginStoryboard Storyboard="{StaticResource shrinkStoryboard}" />
                </EventTrigger>
            </Image.Triggers>
            <Image.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </Image.RenderTransform>
        </Image>
    </ControlTemplate>

    <ControlTemplate x:Key="FilterPanelTemplate">
        <Image Source="/Resources/Images/FilterEditor.png" >
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.MouseEnter">
                    <BeginStoryboard Storyboard="{StaticResource expandStoryboard}" />
                </EventTrigger>
                <EventTrigger RoutedEvent="Image.MouseLeave">
                    <BeginStoryboard Storyboard="{StaticResource shrinkStoryboard}" />
                </EventTrigger>
            </Image.Triggers>
            <Image.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </Image.RenderTransform>
        </Image>
    </ControlTemplate>
    
